<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/emailFromRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordFromRegister"
        android:layout_marginBottom="30dp"
        android:hint="Email" />


    <EditText
        android:id="@+id/passwordFromRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmPasswordFromRegister"
        android:layout_marginBottom="3dp"
        android:hint="Password" />

    <EditText
        android:id="@+id/confirmPasswordFromRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registration"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="32dp"
        android:hint="Confirm Password" />

    <Button
        android:id="@+id/registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="194dp"
        android:text="Register" />

</RelativeLayout>